@model TeamDto
@{
    ViewData["Title"] = "UpdateTeams";
}

<h3 style="color:cornflowerblue">Takım Güncelle</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Teams" asp-action="UpdateTeams" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamPrice"></label>
                <input asp-for="TeamPrice" class="form-control" />
                <span asp-validation-for="TeamPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryId"></label>
                <select asp-for="CountryId" asp-items="ViewBag.country" class="form-control"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

